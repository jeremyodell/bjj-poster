{
  "name": "@bjj-poster/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/local-server.ts",
    "build": "pnpm build:handlers && pnpm build:rename",
    "build:handlers": "tsup src/handlers/hello/index.ts src/handlers/templates/list-templates.ts --format cjs --clean --out-dir dist",
    "build:rename": "find dist -name '*.cjs' -exec sh -c 'mv \"$1\" \"${1%.cjs}.js\"' _ {} \\;",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .turbo"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@bjj-poster/core": "workspace:*",
    "@bjj-poster/db": "workspace:*",
    "stripe": "^14.10.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@bjj-poster/config": "workspace:*",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.16.0",
    "express": "^4.21.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
