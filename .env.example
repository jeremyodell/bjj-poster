# ===========================================
# BJJ Poster App - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in values

# Environment
NODE_ENV=development

# AWS (LocalStack in development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
DYNAMODB_ENDPOINT=http://localhost:4566
S3_ENDPOINT=http://localhost:4566
SQS_ENDPOINT=http://localhost:4566

# DynamoDB
DYNAMODB_TABLE_NAME=bjj-poster-app

# S3 Buckets
S3_UPLOADS_BUCKET=bjj-poster-uploads
S3_GENERATED_BUCKET=bjj-poster-generated

# SQS Queues
SQS_POSTER_QUEUE_URL=http://localhost:4566/000000000000/poster-generation-queue

# Cognito (get these from CDK output or AWS Console)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# Stripe (use test keys in development)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_PRO=price_xxx

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Feature Flags
USE_LOCALSTACK=true
