{
  "name": "bjj-poster-app",
  "version": "0.1.0",
  "private": true,
  "description": "BJJ Photo Builder - Tournament poster generator for athletes",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:integration": "docker-compose up -d && turbo test:integration",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "localstack:up": "docker-compose up -d",
    "localstack:down": "docker-compose down",
    "localstack:reset": "docker-compose down -v && docker-compose up -d",
    "localstack:logs": "docker-compose logs -f localstack",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3"
  }
}
